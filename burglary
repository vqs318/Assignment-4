SELECT *, category as layer FROM sf_crime where category != 'NON-CRIMINAL' and category != 'OTHER OFFENSES' and category != 'SECONDARY OFFENSES' and category != 'SUICIDE'








/** simple visualization */

#sf_crime{
  marker-fill-opacity: 0.5;
  marker-line-color: #FFF;
  marker-line-width: 0;
  marker-line-opacity: 1;
  marker-placement: point;
  marker-type: ellipse;
  marker-width: 6.5;
  marker-fill: #FF6600;
  marker-allow-overlap: true;
}

