SELECT *, category as layer FROM sf_crime

#sf_crime [layer='BURGLARY],[layer='LARCENY/THEFT'],[layer='STOLEN PROPERTY'],[layer='ROBBERY'],[layer='VEHICLE THEFT']{
  marker-fill: black
}






#sf_crime [layer='BURGLARY'],[layer='LARCENY/THEFT'],[layer='STOLEN PROPERTY'],[layer='ROBBERY'],[layer='VEHICLE THEFT']{
  marker-fill: black
}


